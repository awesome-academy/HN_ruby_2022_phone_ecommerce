<div class="row">
  <div class="col-md-12">
    <div class="product-content-right">
      <div class="woocommerce">
        <div class="checkout">

          <div id="customer_details" class="col2-set">
            <div class="col-md-6 ">
              <div class="product-images">
                <div class="product-main-img flex-center">
                  <%= display_first_image_product @admin_product,
                                                  Settings.size_image_medium_more %>
                </div>
              </div>
            </div>
            <div class="col-md-6 ">
              <div class="woocommerce-billing-fields">
                <h3><%= @admin_product.name %></h3>

                <table class="table">
                  <tbody>
                    <tr>
                      <td><%= t "admin.products.form.name" %>: </td>
                      <td>
                        <%= @admin_product.name %>
                      </td>
                    </tr>
                    <tr>
                      <td><%= t "admin.products.form.desc" %>: </td>
                      <td>
                        <%= @admin_product.desc %>
                      </td>
                    </tr>
                    <tr>
                      <td><%= t "admin.products.form.category" %>:</td>
                      <td>
                        <%= @admin_product.category.name %>
                      </td>
                    </tr>
                    <tr>
                      <td><%= t "admin.products.form.created_at" %>:</td>
                      <td>
                        <%= @admin_product.created_at.strftime(t("admin.format_time")) %>
                      </td>
                    </tr>
                    <tr>
                      <td><%= t "admin.products.form.updated_at" %>:</td>
                      <td>
                        <%= @admin_product.updated_at.strftime(t("admin.format_time")) %>
                      </td>
                    </tr>


                  </tbody>
                </table>



              </div>
            </div>
          </div>
      </div>
      </div>

    </div>
  </div>
</div>
<hr>
<%= link_to button_to(t("admin.products.show.new_button")),
            new_admin_product_detail_path(:product_id => @admin_product.id) %>
<br>
<table class="table">
  <thead>
    <tr>
      <th><%= t "admin.products.show.index" %></th>
      <th><%= t "admin.product_details.form.image" %></th>
      <th><%= t "admin.product_details.form.quantity" %></th>
      <th><%= t "admin.product_details.form.cost" %></th>
      <th><%= t "admin.product_details.form.color" %></th>
      <th><%= t "admin.product_details.form.size" %></th>
      <th colspan="3"><%= t "admin.products.show.handle" %></th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% @admin_product.product_details.each do |admin_product_detail| %>
      <tr>
        <td><%= i = i + 1 %></td>
        <td>
          <div style="max-width: 150px; max-height: 150px;">
            <% if admin_product_detail.image.attached? %>
              <%= image_tag admin_product_detail.display_image %>
            <% else %>
              <%= image_tag "empty_image.png" %>
            <% end %>
          </div>
        </td>
        <td><%= admin_product_detail.quantity %></td>
        <td><%= display_cost admin_product_detail.cost %></td>

        <td><%= admin_product_detail.product_color.name%></td>
        <td><%= admin_product_detail.product_size.name %></td>
        <td><%= link_to t("admin.button.show"),
                        admin_product_detail_path(admin_product_detail) %></td>
        <td><%= link_to t("admin.button.edit"),
                        edit_admin_product_detail_path(admin_product_detail) %></td>
        <td><%= link_to t("admin.button.destroy"),
                        admin_product_detail_path(admin_product_detail),
                        method: :delete,
                        data: { confirm: t("admin.are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<div class="flex-center" >
  <%== pagy_bootstrap_nav @pagy %>
</div>
<%= link_to button_to(t("admin.button.edit")),
            edit_admin_product_path(@admin_product) %>
<br>
<%= link_to button_to(t("admin.button.back")),
            admin_products_path %>
<br>
