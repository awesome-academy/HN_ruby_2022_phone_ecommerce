<h1 class="title-order"><%= t "admin.orders.name" %></h1>
<%= link_to button_to(t(".new_order")), new_admin_order_path %>
<br>

<table class="table">
  <thead>
    <tr>
      <th><%= t "admin.orders.attributes.customer_name" %></th>
      <th><%= t "admin.orders.attributes.delivery_address" %></th>
      <th><%= t "admin.orders.attributes.delivery_phone" %></th>
      <th><%= t "admin.orders.attributes.status" %></th>
      <th><%= t "admin.orders.attributes.shiped_date" %></th>
      <th><%= t "admin.orders.attributes.user_name" %></th>
      <th><%= t "admin.orders.attributes.note" %></th>
      <th colspan="3"><%= t "admin.orders.attributes.handle" %></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer_name %></td>
        <td><%= order.delivery_address %></td>
        <td><%= order.delivery_phone %></td>
        <td class="order-row-<%= order.status %> text-bold">
          <%= order.status %>
        </td>
        <td><%= order.shiped_date %></td>
        <td><%= order.user.name %></td>
        <td><%= order.note %></td>
        <td><%= link_to t("admin.button.show"), admin_order_path(order) %></td>
        <td>
          <%= link_to t("admin.button.edit"),
                      edit_admin_order_path(order) %>
        </td>
        <td>
          <%= link_to t("admin.button.destroy"),
              admin_order_path(order),
              method: :delete,
              data: {confirm: t("admin.are_you_sure")} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
