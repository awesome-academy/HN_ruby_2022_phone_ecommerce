<div class="header-area">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="user-menu">
          <ul>
            <% if current_user %>
              <li><%= link_to t("logout"), logout_path, method: :delete %></li>
            <% else %>
              <li><%= link_to t("login"), login_path %></li>
              <li><%= link_to t("signup"), signup_path %></li>
            <% end %>
            <li><%= link_to t("base_title_page"), root_path %></li>
          </ul>
        </div>
      </div>

      <div class="col-md-4">
        <div class="header-right">
          <ul class="list-unstyled list-inline">

            <li class="dropdown dropdown-small">
              <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#" id="dropdownMenuLink" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-language"></i>
                <span class="key"><%= t "header.language" %></span><b class="caret"></b></a>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li>
                  <%= link_to t("header.english"), locale: :en %>
                </li>
                <li>
                  <%= link_to t("header.vietnamese"), locale: :vi %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End header area -->
<div class="site-branding-area">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="logo">
          <h1>
            <a href="./">
              <%= link_to image_tag("logo.png") %>
            </a>
          </h1>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End site branding area -->

<div class="mainmenu-area">
  <div class="container">
    <div class="row">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to t("home"), admin_root_path, class: "active" %>
          </li>
          <li>
            <%= link_to t("admin.products.name"), admin_products_path %>
          </li>
          <li>
            <%= link_to t("admin.header.orders"), admin_orders_path %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- End mainmenu area -->
