<div class="product-big-title-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="product-bit-title text-center">
          <h2>Shopping Cart</h2>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Page title area -->


<div class="single-product-area">
  <div class="zigzag-bottom"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <div class="product-content-right">
          <div class="woocommerce">
            <form method="post" action="#">
              <table cellspacing="0" class="shop_table cart">
                <thead>
                  <tr>
                    <th class="product-img">&nbsp;</th>
                    <th class="product-thumbnail">Product</th>
                    <th class="product-color">Color</th>
                    <th class="product-size">Size</th>
                    <th class="product-price">Price</th>
                    <th class="product-quantity">Quantity</th>
                    <th class="product-subtotal">Total</th>
                    <th class="product-remove">&nbsp;</th>
                  </tr>
                </thead>
                <tbody id="cart">
                  <% if @cart %>
                    <% @cart.each do |item| %>
                      <%= render partial: "carts/cart", locals: {cart: item} %>
                    <% end %>
                  <% end %>
                  <tr>
                    <td class="actions" colspan="8">
                      <div class="coupon">
                        <label for="coupon_code">Coupon:</label>
                        <input type="text" placeholder="Coupon code" value="" id="coupon_code" class="input-text" name="coupon_code">
                        <input type="submit" value="Apply Coupon" name="apply_coupon" class="button">
                      </div>
                      <%= link_to "Checkout", checkout_path, class: "btn btn-primary" %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </form>

            <div class="cart-collaterals">


              <div class="cross-sells">
                <h2>You may be interested in...</h2>
                <ul class="products">
                  <li class="product">
                    <a href="single-product.html">
                      <%= image_tag "product-2.jpg", class: "attachment-shop_catalog wp-post-image", alt: "T_4_front", width: "325", height: "325" %>
                      <h3>Ship Your Idea</h3>
                      <span class="price"><span class="amount">£20.00</span></span>
                    </a>

                    <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="22" rel="nofollow" href="single-product.html">Select options</a>
                  </li>

                  <li class="product">
                    <a href="single-product.html">
                      <%= image_tag "product-4.jpg", class: "attachment-shop_catalog wp-post-image", alt: "T_4_front", width: "325", height: "325" %>
                      <h3>Ship Your Idea</h3>
                      <span class="price"><span class="amount">£20.00</span></span>
                    </a>

                    <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="22" rel="nofollow" href="single-product.html">Select options</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
