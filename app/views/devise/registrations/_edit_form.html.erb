<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, disabled: true %>
    </div>
    <div class="col-sm-6">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <%= f.label :password %> <br>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :desc %><br />
      <%= f.text_field :desc, autofocus: true   %>
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t("wait_confirm_email") + resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit t("update", default: "Update") %>
  </div>
<% end %>
